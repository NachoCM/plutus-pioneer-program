library
  hs-source-dirs:      src
  exposed-modules:     Week05.Free
                     , Week05.Homework1
                     , Week05.Homework2
                     , Week05.NFT
                     , Week05.Signed
  build-depends:       aeson
                     , base ^>=4.14.1.0
                     , containers
                     , freer-extras
                     , playground-common
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-tx-plugin
                     , plutus-tx
                     , text
  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

-- To run this: cabal run test-suite:week05
test-suite week05
  type:               exitcode-stdio-1.0
  main-is:            Main.hs
  hs-source-dirs:     test
  other-modules:      Week05.Homework1Tests
  build-depends:        base ^>=4.14.1.0
                      , plutus-contract
                      , plutus-ledger
                      , plutus-ledger-api
                      , plutus-pioneer-program-week05
                      , plutus-tx
                      , tasty
                      , tasty-quickcheck
  default-language:   Haskell2010
  ghc-options:        -fwarn-tabs -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise -Wcompat -Wincomplete-record-updates -Wincomplete-uni-patterns -Wpartial-fields -Wredundant-constraints -rtsopts -threaded -with-rtsopts=-N
